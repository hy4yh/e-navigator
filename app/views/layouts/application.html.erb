<!DOCTYPE html>
<html>
  <head>
    <title>ENavigator</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <%= render 'layouts/header' %>
    <% if notice %>
      <div class="alert alert-success">
        <%= notice %>
      </div>
    <% elsif alert %>
      <div class="alert alert-warning">
        <%= alert %>
      </div>
    <% end %>
    <div class="m-4">
      <%= yield %>
    </div>
  </body>
</html>
