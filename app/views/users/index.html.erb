<table class="table table-bordered table-hover">
  <thead class="thead-light">
    <tr align="left">
　　  <th>名前</th>
　　  <th>Email</th>
　　  <th>年齢</th>
　　  <th>性別</th>
　　  <th>学校名</th>
　　  <th>面接日時</th>
     <th></th>
    </tr>
  </thead>
  <% @users.each do |user| %>
  <tr align="left">
    <td><%= user.profile.name %></td>
    <td><%= user.email %></td>
    <td><%= age(user.profile.birthday) %></td>
    <td><%= user.profile.gender_i18n %></td>
    <td><%= user.profile.school_name %></td>
    <td>
    <% user.interviews.each do |interview| %>
      <%= l interview.interview_datetime, format: :long if interview_approved?(interview) %>
    <% end %>
    </td>
    <td><%= button_to '面接一覧', user_interviews_path(user), method: :get %></td>
  </tr>
  <% end %>
</table>
